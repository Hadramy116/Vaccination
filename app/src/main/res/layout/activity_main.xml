<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="398dp"
            android:layout_height="528dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="81dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:srcCompat="@drawable/vaccine" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView"
                android:layout_width="229dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="160dp"
                android:layout_marginTop="10dp"
                android:text="@string/Vaccination"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <ImageButton
                android:id="@+id/btnMenuVaccination"
                android:layout_width="95dp"
                android:layout_height="87dp"
                android:layout_marginHorizontal="160dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/gvac1" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="233dp"
                android:layout_height="20dp"
                android:layout_marginHorizontal="160dp"
                android:layout_marginTop="5dp"
                android:text="@string/Historique"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <ImageButton
                android:id="@+id/btnMenuHistorique"
                android:layout_width="95dp"
                android:layout_height="87dp"
                android:layout_marginHorizontal="160dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/historique" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>